<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/menucivom">


                    <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="left"
                            android:lines="2"
                            android:paddingStart="10dp"
                            android:paddingTop="28dp"
                            android:singleLine="false"
                            android:text=" WHY \n CIVOM ?"
                            android:textColor="#32488D"
                            android:textSize="36sp"
                            android:textStyle="normal|bold"
                            tools:layout_conversion_absoluteHeight="77dp"
                            tools:layout_conversion_absoluteWidth="308dp"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:fontFamily="@font/montserrat"
                            android:paddingStart="20sp"
                            android:paddingLeft="12dp"
                            android:text="Read our story for the love of furniture!"
                            android:textColor="#767B91" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="4sp"
                        android:layout_height="45sp"
                        android:layout_gravity="left"
                        android:layout_marginTop="28dp"
                        android:layout_weight=".65"
                        android:background="@drawable/fwd_arrow"
                        android:paddingStart="0dp"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:translationX="-30dp"
                        android:translationY="100dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFFff">

                <android.support.v7.widget.CardView
                    android:layout_width="207dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/a"
                    android:clickable="true"
                    android:onClick="openCatalogue"
                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="230dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/finalchair"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:gravity="left"
                                android:lines="1"
                                android:paddingStart="22dp"
                                android:paddingTop="28dp"
                                android:singleLine="false"
                                android:text="CATALOGUE"
                                android:textColor="#EEF1F8"
                                android:textSize="22sp"
                                android:textStyle="normal|bold"
                                tools:layout_conversion_absoluteHeight="77dp"
                                tools:layout_conversion_absoluteWidth="308dp"
                                tools:layout_editor_absoluteX="0dp"
                                tools:layout_editor_absoluteY="0dp" />


                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/desk">

                        <LinearLayout
                            android:layout_width="216dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:gravity="left"
                                android:lines="2"
                                android:paddingStart="16dp"
                                android:paddingTop="28dp"
                                android:singleLine="false"
                                android:text="TESTIMONIAL"
                                android:textColor="#32488D"
                                android:textSize="22sp"
                                android:textStyle="normal|bold"
                                tools:layout_conversion_absoluteHeight="77dp"
                                tools:layout_conversion_absoluteWidth="308dp"
                                tools:layout_editor_absoluteX="0dp"
                                tools:layout_editor_absoluteY="0dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.75"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#767B91" />
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:onClick="openARView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center|center_vertical"
                        android:background="@drawable/arrrr"
                        android:orientation="vertical"
                        android:textAlignment="textStart">

                        <TextView
                            android:id="@+id/TextViewx"
                            android:layout_width="match_parent"
                            android:layout_height="94dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:paddingLeft="15sp"
                            android:text="AUGMENTED REALITY"
                            android:textAlignment="textStart"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_weight="0.75"
                            android:paddingLeft="15sp"
                            android:text="Experience your furniture in real space in real time"
                            android:textAlignment="textStart"
                            android:textColor="#F5EDED" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="416dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="openContact">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="center|center_vertical"
                        android:background="@drawable/menucon"
                        android:orientation="vertical"
                        android:textAlignment="textStart">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:paddingTop="10sp"
                            android:text="CONTACT US"
                            android:textAlignment="center"
                            android:textColor="#32488D"
                            android:textSize="24sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="0sp"
                            android:letterSpacing="0"
                            android:text="Need any help? Feel free to drop \nus a mail."
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="16sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="537dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@android:color/background_light"
        app:itemIconTint="#32488D"
        app:itemTextColor="#32488D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>