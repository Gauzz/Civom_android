<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#F7C59F">

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:text="search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintTop_toTopOf="@+id/editText"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_icon_search" />

    <TextView
        android:id="@+id/text_softseating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:gravity="left"
        android:lines="2"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:singleLine="false"
        android:text="Soft Seating"
        android:textColor="#32488D"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="77dp"
        tools:layout_conversion_absoluteWidth="308dp" />

    <Button
        android:layout_width="147dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_category"
        android:text="Cave Seating"
        android:textColor="#F7C59F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_softseating" />

    <HorizontalScrollView
        android:layout_width="458dp"
        android:layout_height="258dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="100dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center|center_vertical"
                    android:background="@drawable/whycivom3x">

                    <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="left"
                            android:lines="2"
                            android:paddingStart="6dp"
                            android:paddingTop="28dp"
                            android:singleLine="false"
                            android:text=" WHY \n CIVOM ?"
                            android:textColor="#32488D"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            tools:layout_conversion_absoluteHeight="77dp"
                            tools:layout_conversion_absoluteWidth="308dp"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="0dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:fontFamily="@font/montserrat"
                            android:paddingLeft="12dp"
                            android:text="Read our story for the love of furniture!"
                            android:textColor="#767B91" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="12dp"
                        android:layout_height="56dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="28dp"
                        android:layout_weight="1"
                        android:background="@drawable/fwd_arrow"
                        android:paddingStart="0dp"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:translationX="-35dp"
                        android:translationY="45dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardCornerRadius="34dp"
                app:cardElevation="25dp"
                app:cardMaxElevation="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center|center_vertical"
                    android:background="@drawable/whycivom3x">

                    <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="left"
                            android:lines="2"
                            android:paddingStart="6dp"
                            android:paddingTop="28dp"
                            android:singleLine="false"
                            android:text=" WHY \n CIVOM ?"
                            android:textColor="#32488D"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            tools:layout_conversion_absoluteHeight="77dp"
                            tools:layout_conversion_absoluteWidth="308dp"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="0dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:fontFamily="@font/montserrat"
                            android:paddingLeft="12dp"
                            android:text="Read our story for the love of furniture!"
                            android:textColor="#767B91" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="12dp"
                        android:layout_height="56dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="28dp"
                        android:layout_weight="1"
                        android:background="@drawable/fwd_arrow"
                        android:paddingStart="0dp"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:translationX="-35dp"
                        android:translationY="45dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardCornerRadius="34dp"
                app:cardElevation="25dp"
                app:cardMaxElevation="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center|center_vertical"
                    android:background="@drawable/whycivom3x">

                    <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="left"
                            android:lines="2"
                            android:paddingStart="6dp"
                            android:paddingTop="28dp"
                            android:singleLine="false"
                            android:text=" WHY \n CIVOM ?"
                            android:textColor="#32488D"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            tools:layout_conversion_absoluteHeight="77dp"
                            tools:layout_conversion_absoluteWidth="308dp"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="0dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:fontFamily="@font/montserrat"
                            android:paddingLeft="12dp"
                            android:text="Read our story for the love of furniture!"
                            android:textColor="#767B91" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="12dp"
                        android:layout_height="56dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="28dp"
                        android:layout_weight="1"
                        android:background="@drawable/fwd_arrow"
                        android:paddingStart="0dp"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:translationX="-35dp"
                        android:translationY="45dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@android:color/background_light"
        app:itemIconTint="#32488D"
        app:itemTextColor="#32488D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>